<header>
    <div class="container">
        <a class="logo" href="/">
            <h1>LaunchStore</h1>
            <h2>COMPRA E VENDA</h2>
        </a>

        <form class="search" action="/products/search" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Buscar por produtos"
                {% if search.term %}
                    value={{search.term}}
                {% endif %}
            >   
        </form>    
        <nav class="primary">
            <ul>
                <li>
                    <a href="/products/create">
                        <i class="material-icons">add</i>
                        Novo Anuncio
                    </a>
                </li>
                <li>
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        Minha Conta
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>